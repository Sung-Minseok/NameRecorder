{
  "expo": {
    "name": "자미원학당",
    "slug": "NameRecorder",
    "version": "12.0.0",
    "orientation": "portrait",
    "icon": "./assets/jmw_icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ],
        "NSCameraUsageDescription": "This app uses camera to take pictures using the magnifying lens function.",
        "NSMicrophoneUsageDescription": "This app uses microPhone in recording(녹음기능) function to record customer's name",
        "NSPhotoLibraryUsageDescription": "This app uses photoLibrary permission to check the photos taken using the magnifying lens function in the app"
      },
      "bundleIdentifier": "host.exp.jmwschool",
      "buildNumber": "11.0.0",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "versionCode": 12,
      "adaptiveIcon": {
        "foregroundImage": "./assets/jmw_adapted_icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
          "RECORD_AUDIO",
          "CAMERA",
          "READ_EXTERNAL_STORAGE",
          "WRITE_EXTERNAL_STORAGE"

      ],
      "package": "host.exp.jmwschool",
      "googleServicesFile": "./google-services.json",
      "intentFilters" : [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "https",
              "host": "namerecorder=2f24c.firebaseapp.com",
              "pathPrefix": "/"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "config": {
        "firebase": {
          "appId": "1:364075813917:web:f77afe41339389d6eb8af4",
